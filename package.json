{
  "name": "repartiteur",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "dotenv -c -- next start",
    "lint": "next lint",
    "prisma:reset": "npm run prisma:db:push && npm run prisma:db:seed",
    "prisma:generate": "npx prisma generate",
    "prisma:db:push": "npx prisma db push --force-reset",
    "prisma:db:seed": "npx prisma db seed"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "tsx src/prisma/seed/index.ts"
  },
  "dependencies": {
    "@mantine/core": "^7.17.7",
    "@mantine/hooks": "^7.17.7",
    "@mantine/modals": "^7.17.7",
    "@mantine/notifications": "^7.17.7",
    "@prisma/client": "^6.7.0",
    "bcrypt": "^5.1.1",
    "dotenv-cli": "^8.0.0",
    "next": "15.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.15.3",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.0",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.7.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}
